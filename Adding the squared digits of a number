#include <stdio.h>

int main() 
{
    int n, add=0;
    printf("Adding the squared digits of a number:\nNumber: ");
    scanf("%d",&n);
    
    while(n!=0)
    {
        add+=(n%10)*(n%10);
        printf("n=%d; add=%d\n",n,add);
        n/=10;
    }
    printf("Result: %d\n",add);
    return 0;
}
